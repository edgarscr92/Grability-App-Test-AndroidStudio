<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:id="@+id/firstLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/secondView"
        android:orientation="vertical"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="60dp"
        android:background="@color/cardview_light_background"
        android:padding="40dp">

        <ImageView
            android:layout_height="match_parent"
            android:id="@+id/app_single_icon"
            app:srcCompat="@color/cardview_shadow_start_color"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignLeft="@+id/app_single_title"
            android:layout_alignStart="@+id/imageView"
            android:layout_alignBottom="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_below="@+id/imageView"
            android:minWidth="450dp" />
    </LinearLayout>

    <View
        android:id="@+id/secondView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        android:background="@color/cardview_light_background" />

    <LinearLayout
        android:id="@+id/thirdLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/secondView"
        android:orientation="vertical"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="60dp"
        android:background="@color/cardview_light_background"
        android:padding="40dp">

        <TextView
            android:layout_height="wrap_content"
            android:text="Bitmoji - Your Personal Emoji - Bitstrips"
            android:id="@+id/app_single_title"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:gravity="center_vertical|center_horizontal|center"
            android:layout_width="match_parent"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:padding="15dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:background="@color/bg_text_box"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:layout_height="315dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1"
                android:layout_margin="10dp">

                <TextView
                    android:text="Bitmoji is your own personal emoji.  • Create an expressive cartoon avatar • Choose from a huge library of stickers – all featuring YOU • Use Bitmoji in Snapchat, iMessage and wherever else you chat  Using Bitmoji in Snapchat unlocks friendmoji – 2-person bitmojis featuring you and your friends!Bitmoji is your own personal emoji.  • Create an expressive cartoon avatar • Choose from a huge library of stickers – all featuring YOU • Use Bitmoji in Snapchat, iMessage and wherever else you chat  Using Bitmoji in Snapchat unlocks friendmoji – 2-person bitmojis featuring you and your friends!"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/app_single_desc"
                    android:textSize="18sp"
                    android:gravity="top|right"
                    android:layout_weight="0.22"
                    android:textAlignment="viewStart" />

            </LinearLayout>
        </ScrollView>

        <TextView
            android:layout_width="match_parent"
            android:text="0.00000 USD"
            android:id="@+id/app_single_price"
            android:textColor="?attr/colorPrimaryDark"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="15dp" />

    </LinearLayout>

    <Button
        android:id="@+id/closeDetails"
        android:background="@drawable/x"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_marginRight="32.5dp"
        android:layout_marginTop="35.5dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true" />

</RelativeLayout>