<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <Button
        android:id="@+id/closeDetails"
        android:background="@drawable/x"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_height="40dp"
        android:layout_width="40dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="40dp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/app_single_icon"
                app:srcCompat="@color/cardview_shadow_start_color"
                android:layout_alignTop="@+id/imageView"
                android:layout_alignLeft="@+id/app_single_title"
                android:layout_alignStart="@+id/imageView"
                android:layout_alignBottom="@+id/imageView"
                android:layout_below="@+id/imageView"
                android:foregroundGravity="center_vertical|center_horizontal|center"
                android:layout_gravity="top|center_horizontal"
                android:layout_height="200dp"
                android:layout_width="match_parent" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_height="wrap_content"
                    android:text="Bitmoji - Your Personal Emoji - Bitstrips"
                    android:id="@+id/app_single_title"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="normal|bold"
                    android:gravity="center_vertical|center_horizontal|center"
                    android:layout_width="match_parent"
                    android:layout_alignParentEnd="false"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentLeft="true"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp" />

                <TextView
                    android:text="Bitmoji is your own personal emoji.  • Create an expressive cartoon avatar • Choose from a huge library of stickers – all featuring YOU • Use Bitmoji in Snapchat, iMessage and wherever else you chat  Using Bitmoji in Snapchat unlocks friendmoji – 2-person bitmojis featuring you and your friends!Bitmoji is your own personal emoji.  • Create an expressive cartoon avatar • Choose from a huge library of stickers – all featuring YOU • Use Bitmoji in Snapchat, iMessage and wherever else you chat  Using Bitmoji in Snapchat unlocks friendmoji – 2-person bitmojis featuring you and your friends!"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/app_single_desc"
                    android:textSize="12sp"
                    android:gravity="top|right"
                    android:layout_weight="0.22"
                    android:textAlignment="viewStart" />

                <TextView
                    android:layout_width="match_parent"
                    android:text="0.00000 USD"
                    android:id="@+id/app_single_price"
                    android:textColor="?attr/colorPrimaryDark"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textStyle="normal|bold"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:padding="10dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>



</RelativeLayout>